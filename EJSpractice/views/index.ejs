<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products on Sale</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: lightgrey;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .product-container {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .product {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 15px;
            width: 280px;
            text-align: center;
        }

        .product img {
            max-width: 100%;
            border-radius: 8px;
        }

        .product p {
            color: #444;
            font-size: 16px;
            margin: 10px 0;
        }
    </style>
</head>
<body>

    <h1>Products on Sale</h1>
<div class="product-container">
  <% products.forEach(product => { %>
    <div class="product">
      <a href="/<%= product.slug %>">
        <img src="<%= product['product link'] %>" alt="<%= product['product name'] %>" width="300" height="300" />
      </a>
      <p><%= product['product name'] %></p>
      <p><%= product['product price'] %></p>
    </div>
  <% }) %>
</div>

</body>
</html>
